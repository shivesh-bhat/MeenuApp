# Use official lightweight JDK image
FROM eclipse-temurin:17-jdk-alpine

WORKDIR /app

# Copy project files
COPY . .

# Build the app
RUN ./mvnw clean package -DskipTests

# Expose port
EXPOSE 8080

# Run the jar (replace with your actual jar name)
CMD ["java", "-jar", "target/love-0.0.1-SNAPSHOT.jar"]